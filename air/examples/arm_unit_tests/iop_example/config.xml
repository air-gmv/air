<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ARINC_653_Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ModuleName="iop_example">

  <!-- Partition 1  -->
  <Partition PartitionIdentifier="1" PartitionName="iop"
    Criticality="LEVEL_A" EntryPoint="empty" SystemPartition="true">
    <Sampling_Port Name="dsampling" Direction="DESTINATION" MaxMessageSize="1024" RefreshRateSeconds="1.0"/>
    <Queuing_Port Name="squeuing" Direction="SOURCE" MaxMessageSize="1024" MaxNbMessages="32" />
    <PartitionConfiguration Personality="BARE" IOP="iop.xml" Cores="1">
      <Libs>LIBIOP</Libs>
      <Devices></Devices>
      <Cache>CODE; DATA</Cache>
      <Memory Size="0x1000000" />
      <Permissions>SUPERVISOR;</Permissions>
    </PartitionConfiguration>
  </Partition>

  <!-- Partition 2 -->
  <Partition PartitionIdentifier="2" PartitionName="sampling"
    Criticality="LEVEL_A" EntryPoint="entry_func" SystemPartition="false">
    <Sampling_Port Name="ssampling" Direction="SOURCE" MaxMessageSize="1024" RefreshRateSeconds="1.0"/>
    <Queuing_Port Name="dqueuing" Direction="DESTINATION" MaxMessageSize="1024" MaxNbMessages="32" />
    <PartitionConfiguration Personality="BARE">
      <Libs>LIBAIR; IMASPEX; LIBPRINTF</Libs>
      <Devices></Devices>
      <Cache>CODE; DATA</Cache>
      <Memory Size="0x1000000" />
      <Permissions>
          FPU_CONTROL; CACHE_CONTROL; GLOBAL_TIME; SET_TOD; SET_PARTITION_MODE;
      </Permissions>
    </PartitionConfiguration>
  </Partition>

  <!-- Partition 3
  <Partition PartitionIdentifier="3" PartitionName="queuing"
    Criticality="LEVEL_A" EntryPoint="entry_func" SystemPartition="false">
    <Queuing_Port Name="aqueuing" Direction="DESTINATION" MaxMessageSize="1024" MaxNbMessages="32" />
    <PartitionConfiguration Personality="BARE">
      <Libs>LIBAIR; IMASPEX; LIBPRINTF</Libs>
      <Devices></Devices>
      <Cache>CODE; DATA</Cache>
      <Memory Size="0x1000000" />
      <Permissions>
          FPU_CONTROL; CACHE_CONTROL; GLOBAL_TIME; SET_TOD; SET_PARTITION_MODE;
      </Permissions>
    </PartitionConfiguration>
  </Partition> -->

  <!-- Schedule 1 -->
  <Module_Schedule ScheduleIdentifier="1" ScheduleName="schedule"
    InitialModuleSchedule="true" MajorFrameSeconds="2">
    <Partition_Schedule PartitionIdentifier="1" PartitionName="iop"
      PeriodDurationSeconds="1.5" PeriodSeconds="2">
      <Window_Schedule WindowIdentifier="2" PartitionPeriodStart="true"
        WindowDurationSeconds="1.5" WindowStartSeconds="0.5"/>
    </Partition_Schedule>
    <Partition_Schedule PartitionIdentifier="2" PartitionName="sampling"
      PeriodDurationSeconds="0.5" PeriodSeconds="2">
      <Window_Schedule WindowIdentifier="1" PartitionPeriodStart="true"
        WindowDurationSeconds="0.5"  WindowStartSeconds="0.0"/>
    </Partition_Schedule>
    <!-- <Partition_Schedule PartitionIdentifier="3" PartitionName="queuing"
      PeriodDurationSeconds="0.5" PeriodSeconds="2">
      <Window_Schedule WindowIdentifier="2" PartitionPeriodStart="true"
        WindowDurationSeconds="0.5"  WindowStartSeconds="1.5"/>
    </Partition_Schedule> -->
 </Module_Schedule>

  <!-- Connection table  -->
  <Connection_Table>
    <Channel ChannelIdentifier="1" ChannelName="sampling">
      <Source>
        <Standard_Partition PartitionIdentifier="2" PartitionName="sampling"
          PortName="ssampling"/>
      </Source>
      <Destination>
        <Standard_Partition PartitionIdentifier="1" PartitionName="iop"
          PortName="dsampling"/>
      </Destination>
    </Channel>
    <Channel ChannelIdentifier="2" ChannelName="queuing">
      <Source>
        <Standard_Partition PartitionIdentifier="1" PartitionName="iop"
          PortName="squeuing"/>
      </Source>
      <Destination>
        <Standard_Partition PartitionIdentifier="2" PartitionName="sampling"
          PortName="dqueuing"/>
      </Destination>
    </Channel>
  </Connection_Table>

  <!-- Module configuration -->
  <AIR_Configuration TicksPerSecond="10" RequiredCores="1"/>
</ARINC_653_Module>
