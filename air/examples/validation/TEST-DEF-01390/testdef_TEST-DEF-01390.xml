<!-- Test description file -->
<!-- Test steps must be sequential, starting at 001 -->
<!-- Repetitions are limited to 0xFFF,i.e. 4095		-->
<!-- Major time frame [seconds]						-->
<!-- Test End partition : partition where the test
	 will end and finish - if needed, this can be 
	 adapted										-->
<TDF>
	<!-- Test Definition -->
	<test 	name="TEST-DEF-01390"
			id="1390" 
			partitions="3"
			test_end_partition="0"
			repeat="1" 
			mtf="0.3"
			ms_per_tick="10"
			type="TEST_GMV_VAL"
			personality="RTEMS5"
			apex="IMASPEX">
		<description>
						Devise a test with three partitions, where the third is not included
			in an initial schedule. Check that a call to GET_PARTITION_STATUS on the newly 
			run partition (after a SET_MODULE_SCHEDULE function call) returns the status 
			COLD_START.
		</description>
		<requirements>
			<req name="AIR_SEP_0560" />	
		</requirements>
		
		<!-- Test Procedure -->
		<testprocedure repeat="1">
			<teststep id="0" partition="0" repeat="1">
				<description>
					TSAL_INIT; expect NO_ERROR.
				</description>
			</teststep>
			<teststep id="1" partition="0" repeat="1">
				<description>
					Verify partition mode is the initial mode (COLD_START).
				</description>
			</teststep>
			<teststep id="2" partition="0" repeat="1">
				<description>
					Set partition mode to NORMAL; expect NO_ERROR.
				</description>
			</teststep>			
			<teststep id="3" partition="1" repeat="1">
				<description>
					TSAL_INIT; expect NO_ERROR.
				</description>
			</teststep>			
			<teststep id="4" partition="1" repeat="1">
				<description>
					Verify partition mode is the initial mode (COLD_START).
				</description>
			</teststep>
			<teststep id="5" partition="1" repeat="1">
				<description>
					Set partition mode to NORMAL; expect NO_ERROR.
				</description>
			</teststep>
			<teststep id="6" partition="0" repeat="1">
				<description>
					Verify partition mode is NORMAL.
				</description>
			</teststep>
			<teststep id="7" partition="1" repeat="1">
				<description>
					Verify partition mode is NORMAL.
				</description>
			</teststep>
			<teststep id="8" partition="0" repeat="1">
				<description>
					Verify yet unscheduled partition p2 mode is COLD_START.
				</description>
			</teststep>
			<teststep id="9" partition="0" repeat="1">
				<description>
					SET_MODULE_SCHEDULE to the second schedule, the one including partition p2.
				</description>
			</teststep>
			<teststep id="10" partition="0" repeat="1">
				<description>
					Verify partition mode is NORMAL.
				</description>
			</teststep>
			<teststep id="11" partition="1" repeat="1">
				<description>
					Verify partition mode is NORMAL.
				</description>
			</teststep>
			<teststep id="12" partition="2" repeat="1">
				<description>
					Verify partition mode is the initial mode (COLD_START).
				</description>
			</teststep>			
			
		</testprocedure>		
	</test>	<!-- Test id="1390" -->
</TDF>