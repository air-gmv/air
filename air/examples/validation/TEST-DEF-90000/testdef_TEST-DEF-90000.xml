<!-- Test description file -->
<!-- Test steps must be sequential, starting at 001 -->
<!-- Repetitions are limited to 0xFFF,i.e. 4095		-->
<!-- Major time frame [seconds]						-->
<!-- Test End partition : partition where the test
	 will end and finish - if needed, this can be 
	 adapted										-->
<TDF>
	<!-- Test Definition -->
	<test 	name="TEST-DEF-90000"
			id="90000" 
			partitions="2"
			test_end_partition="0"
			repeat="1" 
			mtf="1.5"
			ms_per_tick="10"
			type="TEST_GMV_VAL"
			personality="RTEMS5">
		<description>
			Tests if a for(;;); executed by a timer hangs the system or not.
		</description>
		<requirements>
			<req name="AIR_SEP_0120" />	
		</requirements>
		
		<!-- Test Procedure -->
		<testprocedure repeat="1">
      <teststep id="0" partition="0" repeat="1">
        <description>
			Create task, with priority 10 and stack_size of 4096.
        </description>
      </teststep>
      <teststep id="1" partition="0" repeat="1">
        <description>
            Start task.
        </description>
      </teststep>
      <teststep id="2" partition="0" repeat="1">
        <description>
            Creates timer.
        </description>
      </teststep>
      <teststep id="3" partition="0" repeat="1">
        <description>
            Sets timer to fire after 10 Clock Ticks.
        </description>
      </teststep>
      <teststep id="4" partition="0" repeat="1">
        <description>
            Sets task to sleep in 20 clock ticks.
        </description>
      </teststep>
      <teststep id="5" partition="0" repeat="1">
        <description>
            Tests if the other partitions block with a for loop.
        </description>
      </teststep>
      <teststep id="6" partition="1" repeat="1">
        <description>
            Test if the partition is blocked or not and sleeps.
        </description>
      </teststep>

		</testprocedure>		
	</test>	<!-- Test id="050" -->
</TDF>
